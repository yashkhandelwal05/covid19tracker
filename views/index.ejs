    <!-- Font Awesome -->
    <script src="https://kit.fontawesome.com/996973c893.js" crossorigin="anonymous"></script>

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Baloo+Thambi+2:wght@400;500;600;700;800&display=swap" rel="stylesheet" />

    <!-- My Stylesheet -->
    <link rel="stylesheet" href="/css/styles.css" />

    <!-- My jQuery >
    <script src="Main.js"></script-->

    <!-- Chart.js -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.3/Chart.min.js"></script>

    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.6.9/angular.min.js"></script>

    <title>Covid-19 Tracker India</title>

    
</head>

<body ng-app="myApp">
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="index.ejs">COVID-19 Website</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item active">
                    <a class="nav-link" href="index.ejs">Home <span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="Mongo_chat/index.html">Chat with Official</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="https://covid19.karnataka.gov.in/english">Government Information Portal</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="about.html">About Us</a>
                </li>
            </ul>
        </div>
    </nav>
    <div class="container-fluid bg-light p-5 text-center my-3">
        <h1 class="">Covid-19 Website India</h1>
        <h5 class="text-muted">
            A Project to keep track of all the COVID-19 cases around India (statewise).
        </h5>
    </div>

    <div class="container my-5">
        <div class="row text-center">
            <div class="col-3 text-warning">
                <h5>Confirmed</h5>
                <p id="confirmed"></p>
            </div>
            <div class="col-3 text-info">
                <h5>Active</h5>
                <p id="active"></p>
            </div>
            <div class="col-3 text-success">
                <h5>Recovered</h5>
                <p id="recovered"></p>
            </div>
            <div class="col-3 text-danger">
                <h5>Deceased</h5>
                <p id="deaths"></p>
            </div>
        </div>
    </div>

    <div class="container bg-light p-3 my-5 text-center">
        <h5 class="text-info">"Prevention is better than Cure."</h5>
        <p class="text-muted">Stay Cautious Stay Indoors Stay Safe.</p>
    </div>

    <canvas id="myChart"></canvas>

    <div class="container text-center my-5">
        <h6 class="text-info">
            *Click on the Confirmed/Recovered/Deaths buttons above to see the chart individually.*
        </h6>
    </div>
    
    <script src="/js/script.js"></script>
